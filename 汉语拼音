    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Noto Sans SC', sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .poster-container {
            width: 720px;
            min-height: 960px;
            background: linear-gradient(135deg, #ce93d8 0%, #80cbc4 100%);
            border-radius: 24px;
